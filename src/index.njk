    <li class="color">
      <span class="color-block" style="background-color: {{ item.value }}"></span>
      <p class="color-value">theme-{{ key }}</p>
    </li>
    {% endfor %}
  </ul>
</section>

<section class="section">
  <h2>Dark theme colors</h2>
  <ul class="list">
    {% for key, item in tokens.dark.theme %}
    <li class="color">
      <span class="color-block" style="background-color: {{ item.value }}"></span>
      <p class="color-value">theme-{{ key }}</p>
    </li>
    {% endfor %}
  </ul>
</section>